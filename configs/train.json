{
    "name": "fastspeech_kaggle",
    "n_gpu": 1,
    "arch": {
        "type": "FastSpeech2Model",
        "args": {
            "max_seq_len": 3000,
            "vocab_size": 300,
            "fft_conv1d_kernel": [9, 1],
            "fft_conv1d_padding": [4, 0],
            "encoder_n_layer": 4,
            "encoder_dim": 256,
            "encoder_head": 2,
            "encoder_conv1d_filter_size": 1024,
            "duration_predictor_filter_size": 256,
            "duration_predictor_kernel_size": 3,
            "pitch_predictor_filter_size": 256,
            "pitch_predictor_kernel_size": 3,
            "energy_predictor_filter_size": 256,
            "energy_predictor_kernel_size": 3,
            "decoder_n_layer": 4,
            "decoder_dim": 256,
            "decoder_head": 2,
            "decoder_conv1d_filter_size": 1024,
            "dropout": 0.1,
            "PAD": 0,
            "min_pitch": 59.91,
            "max_pitch": 887.27,
            "min_energy": 15.02,
            "max_energy": 91.42,
            "num_bins": 256,
            "num_mels": 80
        }
    },
    "data": {
        "train": {
            "batch_size": 48,
            "num_workers": 1,
            "datasets": [
                {
                    "type": "LJSpeechDataset",
                    "args": {
                        "dir": "data",
                        "text_cleaners": ["english_cleaners"],
                        "batch_expand_size": 10
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-3,
            "betas": [0.9, 0.98],
            "eps": 1e-9
        }
    },
    "loss": {
        "type": "FastSpeech2Loss",
        "args": {}
    },
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "epochs": 16,
            "steps_per_epoch": 10000,
            "anneal_strategy": "cos",
            "max_lr": 1e-3,
            "pct_start": 0.1
        }
    },
    "trainer": {
        "epochs": 16,
        "len_epoch": 10000,
        "log_step": 100,
        "batch_expand_size": 10,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "dla3_text_to_speech",
        "grad_norm_clip": 5,
        "waveglow_path": "waveglow/pretrained_model/waveglow_256channels.pt"
    }
}
